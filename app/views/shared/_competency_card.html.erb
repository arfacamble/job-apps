<div class="my-2 p-2 pb-4 flex flex-col border-b border-blue-700 border-opacity-50">
  <div class="mb-2 flex items-center pl-2 pb-2">
    <% if competency.image_url %>
      <img src=<%= competency.image_url %> class="h-12 w-12 mr-2 rounded-md object-cover object-center">
    <% end %>
    <p class="font-headers text-lg font-light text-background"><%= competency.title %></p>
    <% if now_in %>
      <%= link_to 'Remove', application_competency_path(app, competency), method: :delete, class: 'bg-red-700 text-white py-1 px-2 mx-2 rounded-sm' %>
    <% else %>
      <%= link_to 'Add', application_competencies_path(app, competency_id: competency), method: :post, class: 'bg-green-500 text-white py-1 px-2 mx-2 rounded-sm' %>
    <% end %>
  </div>
  <div class="w-5/6 self-end flex border border-red-700 border-opacity-20 rounded-md p-2">
    <p class="font-body italic text-background text-right"><%= competency.text %></p>
  </div>
</div>
