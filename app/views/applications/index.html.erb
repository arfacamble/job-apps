<div class="flex justify-center">
  <div class="w-11/12 md:w-3/4 pt-4">
    <h1 class="text-2xl text-center">Applications</h1>

    <% @applications.each do |app| %>
      <%= link_to edit_application_path(app) do %>
        <div class="m-2 p-2 border border-gray rounded-lg hover:border-black">
          <h2><%= app.job_title %> </h2>
          <h3><%= app.company_name %> </h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
